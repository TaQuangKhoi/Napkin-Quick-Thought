<Window x:Class="Napkin_Quick_Thought.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Napkin_Quick_Thought"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grMain">
        <RichTextBox x:Name="rtbThought" Margin="100,100,100,100" FontWeight="Light" FontStyle="Italic" GotFocus="rtbThought_GotFocus">
            <FlowDocument>
                <Paragraph x:Name="pgThought">
                    <Run Text="Input your thought"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Grid x:Name="grButton">
            <Button x:Name="btnSend" Content="Send" Click="btnSend_Click" Height="20" VerticalAlignment="Top" Width="40" Margin="0,334,0,0"/>
        </Grid>
    </Grid>
</Window>
